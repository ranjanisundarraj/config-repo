pipeline {
	agent any
		stages {
			//Properties File Initiation
			stage('Properties File Load') {
				steps {
					script {
						gitProps = readProperties file: 'PropertiesFile/PropertiesFile.properties'
						echo "Properties File loaded"
						}
					}
			}

			//GIT Cloning
			stage('Git Clone') {
				steps {
					git url: gitHubProps.GIT_APP_REPO,
					branch: gitHubProps.GIT_APP_REPO_BRANCH
					echo 'Git Clone completed'
					}
			}

			//SonarQube Analysis
			stage('SonarQube Analysis') {
				steps {
					dir(gitHubProps.PROJECT_PATH) {
						sh sonarProps.BUILD_SONAR_SCAN
						echo 'SonarQube Analysis completed'
					}
				}
			}
			
			//Maven Build
			stage('Build Maven') {
				steps {
					dir(gitHubProps.PROJECT_PATH) {
						sh gitHubProps.MAVEN_BUILD
						echo 'Maven Build completed'
					}
				}
			}			
			
			//Artifactory Upload
			stage('Artifacts Upload') {
				steps {
					script {
						server = Artifactory.server artProps.ARTIFACTORY_ID
						def uploadSpec = """{
							"files": [
	                    		{
	                    			"pattern": "target/*.war",
	                        		"target": "demo-java/target/Build #${env.BUILD_NUMBER}/"
	                    		}
	                    		]
	                		}"""
	                	server.upload(uploadSpec) 
              			echo "Artifact Uploaded"
	            	}
				}
			}	
					
		}